{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "UserPreferencesDefaultCatalogSet",
	"type": "object",
	"title": "UserPreferencesDefaultCatalogSet",
	"description": "Recorded when a Data Analyst sets a default catalog for automatic selection after login.",
	"required": ["preferencesId", "catalogUri", "setAt"],
	"properties": {
		"preferencesId": {
			"type": "string",
			"format": "uuid",
			"description": "Preferences being updated"
		},
		"previousCatalogUri": {
			"type": "string",
			"format": "uri",
			"description": "Previous default catalog URI, if any"
		},
		"catalogUri": {
			"type": "string",
			"format": "uri",
			"description": "New default catalog URI"
		},
		"catalogName": {
			"type": "string",
			"description": "Human-readable catalog name"
		},
		"setAt": {
			"type": "string",
			"format": "date-time",
			"description": "Timestamp when the default was set"
		}
	}
}
