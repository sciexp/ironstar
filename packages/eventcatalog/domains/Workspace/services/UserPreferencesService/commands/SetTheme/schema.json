{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "SetTheme",
	"type": "object",
	"title": "SetTheme",
	"description": "Command to change the user's theme preference to Light, Dark, or System.",
	"required": ["theme"],
	"properties": {
		"theme": {
			"type": "string",
			"enum": ["Light", "Dark", "System"],
			"description": "New theme preference"
		}
	}
}
