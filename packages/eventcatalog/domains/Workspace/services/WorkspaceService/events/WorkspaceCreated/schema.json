{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "WorkspaceCreated",
	"type": "object",
	"title": "WorkspaceCreated",
	"description": "Recorded when a new workspace is created with owner, name, and visibility settings.",
	"required": ["workspaceId", "name", "visibility", "createdAt"],
	"properties": {
		"workspaceId": {
			"type": "string",
			"format": "uuid",
			"description": "Unique identifier for the workspace"
		},
		"name": {
			"type": "string",
			"description": "Display name for the workspace"
		},
		"ownerId": {
			"type": ["string", "null"],
			"format": "uuid",
			"description": "Owner's user ID (null for anonymous workspaces)"
		},
		"visibility": {
			"type": "string",
			"enum": ["Public", "Private"],
			"description": "Initial visibility setting"
		},
		"createdAt": {
			"type": "string",
			"format": "date-time",
			"description": "Timestamp when the workspace was created"
		}
	}
}
